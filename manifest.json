{
  "manifest_version": 3,
  "name": "Quran Verse Notifier",
  "version": "1.0",
  "description": "Displays Quran verses with translations at user-defined intervals.",
  "permissions": [
    "notifications",
    "storage",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "host_permissions": ["<all_urls>"]
}